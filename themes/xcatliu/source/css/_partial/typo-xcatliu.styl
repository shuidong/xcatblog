// 覆盖 typo.css

// a
a
  color: #5cc3a1
.typo a
  border-bottom: 0
a:hover
.typo a:hover
  color: #1f9c73
  text-decoration: underline

// iframe
.typo iframe
  margin-bottom: 1.8em;

// code
pre
code
  background:#f8f8f8;
pre
  padding: 0.5em 1em
code
  padding: 0.2em 0.4em
figure pre
  border: 0
  padding: 1em 1.5em
  overflow-x: auto
  font-size: 0.8em


blockquote
  border-left: 1px solid #5cc3a1



